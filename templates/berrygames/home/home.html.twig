{% block stylesheets_css %}
    <link rel="stylesheet" href="//cdn.berrygames.net/css/home/style.css">
{% endblock %}

{% block content %}
    <div class="promoted" id="promoted">
        <div class="scroll-content-wrapper">
            <div class="promoted-button">
                <div class="promoted-button-container">
                    <span class="normal">play.berrygames.net</span>
                    <span class="hover">Click to copy</span>
                    <span class="copied">Copied !</span>
                </div>
            </div>
            <div class="scroll-content">
                <a href="#content">
                    <i class="las la-angle-double-down"></i>
                </a>
            </div>
        </div>
        <div class="promoted-text">
            <div class="container">
                <div class="row justify-content-md-center">
                    <div class="col-md-5 promoted-resume">
                        <h1>BerryGames â€” The FREE Minecraft minigames server from 1.8 to 1.15.</h1>
                        <h2>Lorem ipsum dolor sit amet consectetur adipisicing elit. Corrupti accusamus est debitis esse
                            repellat quo vitae. ðŸŽ…<br>
