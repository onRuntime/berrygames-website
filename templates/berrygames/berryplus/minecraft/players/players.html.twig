{% extends 'berrygames/berryplus/base.html.twig' %}

{% block page_title %}{{ page_title }}{% endblock %}

{% block content %}
    <section class="content">
        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                {% for message in app.flashes('success') %}
                    <div class="btn btn-success btn-sm">{{ message }}</div>
                {% endfor %}
                <div class="card-tools">
                    <div class="input-group input-group-sm">
                        <input type="text" class="form-control" placeholder="Search Player">
                        <div class="input-group-append">
                            <div class="btn btn-primary">
                                <i class="fas fa-search"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                    <tr>
                        <th style="width: 15%">
                            UUID
                        </th>
                        <th>
                            Identity
                        </th>
                        <th>
                            Ranks
                        </th>
                        <th>
                            Currency
                        </th>
                        <th>
                            Progression
                        </th>
                        <th>
                            2af
                        </th>
                        <th>
                            Sanctions
                        </th>
                        <th>
                            Relations
                        </th>
                        <th style="width: 15%">
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for player in players %}
                        <tr id="{{ player.uuid }}">
                            <td>
                                {{ player.uuid }}
                            </td>
                            <td>
                                {{ player.identity|replace({',': ',\n', '{':'','}':'', '[':'', ']':''})|nl2br }}
                            </td>
                            <td>
                                {{ player.ranks|replace({',': ',\n', '{':'','}':'', '[':'', ']':''})|nl2br }}
                            </td>
                            <td>
                                {{ player.currency|replace({',': ',\n', '{':'','}':'', '[':'', ']':''})|nl2br }}
                            </td>
                            <td>
                                {{ player.progression|replace({',': ',\n', '{':'','}':'', '[':'', ']':''})|nl2br }}
                            </td>
                            <td>
                                {{ player.taf }}
                            </td>
                            <td>
                                {{ player.sanctions }}
                            </td>
                            <td>
                                {{ player.relations }}
                            </td>
                            <td class="project-actions text-right">
                                <a class="btn btn-info btn-sm"
                                   href="{{ path('berryplus.minecraft.players.edit', {'player': player.uuid }) }}">
                                    <i class="fas fa-pencil-alt">
                                    </i>
                                    Edit
                                </a>
                                <a class="btn btn-danger btn-sm"
                                   href="{{ path('berryplus.minecraft.players.delete', {'player': player.uuid }) }}"
                                   onclick='return confirm("Are you sure you want to delete {{ player.uuid }}?")'>
                                    <i class="fas fa-trash">
                                    </i>
                                    Delete
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </section>
    <!-- /.content -->
{% endblock %}