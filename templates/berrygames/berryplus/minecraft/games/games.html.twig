{% extends 'berrygames/berryplus/base.html.twig' %}

{% block page_title %}{{ page_title }}{% endblock %}

{% block content %}
    <section class="content">
        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <a class="btn btn-success btn-sm" href="{{ path('berryplus.minecraft.games.new') }}">
                    <i class="fas fa-plus">
                    </i>
                    Create a new game
                </a>
                {% for message in app.flashes('success') %}
                    <div class="btn btn-success btn-sm">{{ message }}</div>
                {% endfor %}
                <div class="card-tools">
                    <div class="input-group input-group-sm">
                        <input type="text" class="form-control" placeholder="Search Game">
                        <div class="input-group-append">
                            <div class="btn btn-primary">
                                <i class="fas fa-search"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                    <tr>
                        <th style="width: 15%">
                            Codename
                        </th>
                        <th>
                            Tag
                        </th>
                        <th>
                            Arcade
                        </th>
                        <th>
                            Location
                        </th>
                        <th>
                            Description
                        </th>
                        <th>
                            Texture
                        </th>
                        <th>
                            State
                        </th>
                        <th style="width: 15%">
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for game in games %}
                        <tr id="{{ game.codename }}">
                            <td>
                                <a>
                                    {{ game.codename }}
                                </a>
                            </td>
                            <td>
                                -{{ game.tag }}
                            </td>
                            <td>
                                {{ game.arcade }}
                            </td>
                            <td>
                                {{ game.location }}
                            </td>
                            <td>
                                {{ game.description }}
                            </td>
                            <td>
                                {{ game.texture }}
                            </td>
                            <td>
                                {{ game.state }}
                            </td>
                            <td class="project-actions text-right">
                                <a class="btn btn-info btn-sm"
                                   href="{{ path('berryplus.minecraft.games.edit', {'game': game.codename }) }}">
                                    <i class="fas fa-pencil-alt">
                                    </i>
                                    Edit
                                </a>
                                <a class="btn btn-danger btn-sm"
                                   href="{{ path('berryplus.minecraft.games.delete', {'game': game.codename }) }}"
                                   onclick='return confirm("Are you sure you want to delete {{ game.codename }}?")'>
                                    <i class="fas fa-trash">
                                    </i>
                                    Delete
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </section>
    <!-- /.content -->
{% endblock %}