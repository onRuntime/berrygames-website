<!DOCTYPE html>
<html lang="en">
<head>
    <!--
        Required Meta Tags
    -->
    <meta charset="UTF-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!--
        Primary Meta Tags
    -->
    <title>{% block title %}BerryGames â€¢ Berry+{% endblock %}</title>

    <!--
        CSS
    -->
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="//cdn.berrygames.net/berryplus/plugins/fontawesome-free/css/all.min.css">
    <!-- IonIcons -->
    <link rel="stylesheet" href="//code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="//cdn.berrygames.net/berryplus/css/adminlte.min.css">
    {% block stylesheets_css %}{% endblock %}


    <!-- Google Font: Source Sans Pro -->
    <link href="//fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">

    <!--
        Favicons
    -->
    <link rel="apple-touch-icon" sizes="180x180" href="//cdn.berrygames.net/favicon/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="//cdn.berrygames.net/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="//cdn.berrygames.net/favicon/favicon-16x16.png">
    <link rel="manifest" href="//cdn.berrygames.net/favicon/site.webmanifest">

    <!--
        JS
    -->
    {% block javascripts_top %}{% endblock %}
</head>

{% block body %}
    <body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="{{ path('berryplus') }}" class="nav-link">Home</a>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->

        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="{{ path('berryplus') }}" class="brand-link">
                <img src="//cdn.berrygames.net/img/logo/logo.png" alt="AdminLTE Logo"
                     class="brand-image img-circle elevation-3"
                     style="opacity: .8">
                <span class="brand-text font-weight-light">Berry+</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel (optional) -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="//minotar.net/helm/{{ app.user.username }}/160.png" class="img-circle elevation-2"
                             alt="User Image">
                    </div>
                    <div class="info">
                        <a href="#" class="d-block">{{ app.user.username }}</a>
                    </div>
                </div>

                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu"
                        data-accordion="false">
                        <!-- Add icons to the links using the .nav-icon class
                            with font-awesome or any other icon font library -->
                        <li class="nav-item">
                            <a href="{{ path('berryplus') }}"
                               class="nav-link{% if app.request.attributes.get('_route') == 'berryplus' %} active{% endif %}">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>
                                    Dashboard
                                </p>
                            </a>
                        </li>
                        <li class="nav-header">WEBSITE</li>
                        <li class="nav-item">
                            <a href="{{ path('berryplus.website.news') }}"
                               class="nav-link{% if 'berryplus.website.news' in app.request.attributes.get('_route') %} active{% endif %}">
                                <i class="far fa-newspaper nav-icon"></i>
                                <p>News</p>
                            </a>
                        </li>
                        <li class="nav-header">MINECRAFT</li>
                        <li class="nav-item">
                            <a href="{{ path('berryplus.minecraft.games') }}"
                               class="nav-link{% if 'berryplus.minecraft.games' in app.request.attributes.get('_route') %} active{% endif %}">
                                <i class="fas fa-gamepad nav-icon"></i>
                                <p>Games</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="{{ path('berryplus.minecraft.gifts') }}"
                               class="nav-link{% if 'berryplus.minecraft.gifts' in app.request.attributes.get('_route') %} active{% endif %}">
                                <i class="fas fa-gifts nav-icon"></i>
                                <p>Gifts</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="{{ path('berryplus.minecraft.players') }}"
                               class="nav-link{% if 'berryplus.minecraft.players' in app.request.attributes.get('_route') %} active{% endif %}">
                                <i class="fas fa-users nav-icon"></i>
                                <p>Players</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="{{ path('berryplus.minecraft.ranks') }}"
                               class="nav-link{% if 'berryplus.minecraft.ranks' in app.request.attributes.get('_route') %} active{% endif %}">
                                <i class="fas fa-layer-group nav-icon"></i>
                                <p>Ranks</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="{{ path('berryplus.minecraft.translations') }}"
                               class="nav-link{% if 'berryplus.minecraft.translations' in app.request.attributes.get('_route') %} active{% endif %}">
                                <i class="fas fa-language nav-icon"></i>
                                <p>Translations</p>
                            </a>
                        </li>
                        <div class="mt-3 mb-3" style="border-top: 1px solid #4f5962;"></div>
                        <li class="nav-item">
                            <a href="{{ path('berryplus_logout') }}" class="nav-link text-danger">
                                <i class="nav-icon fas fa-power-off"></i>
                                <p class="text">Log out</p>
                            </a>
                        </li>

                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="m-0 text-dark">{% block page_title %}Dashboard{% endblock %}</h1>
                        </div><!-- /.col -->
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a href="{{ path('berryplus') }}">Home</a></li>
                                <li class="breadcrumb-item active">{{ block('page_title') }}</li>
                            </ol>
                        </div><!-- /.col -->
                    </div><!-- /.row -->
                </div><!-- /.container-fluid -->
            </div>
            <!-- /.content-header -->

            <!-- Main content -->
            {% block content %}{% endblock %}
        </div>
        <!-- /.content-wrapper -->

        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
        </aside>
        <!-- /.control-sidebar -->
    </div>
    <!-- REQUIRED SCRIPTS -->

    <!-- jQuery -->
    <script src="//cdn.berrygames.net/berryplus/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap -->
    <script src="//cdn.berrygames.net/berryplus/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE -->
    <script src="//cdn.berrygames.net/berryplus/js/adminlte.js"></script>

    <!-- OPTIONAL SCRIPTS -->
    <script src="//cdn.berrygames.net/berryplus/plugins/chart.js/Chart.min.js"></script>
    <script src="//cdn.berrygames.net/berryplus/js/demo.js"></script>
    <script src="//cdn.berrygames.net/berryplus/js/pages/dashboard3.js"></script>
    </body>
{% endblock %}
</html>